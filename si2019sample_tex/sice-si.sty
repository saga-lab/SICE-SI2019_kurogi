%%%タイトルコマンドの制作%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\def\maketitle{%
  \par%
  \begingroup%
    \def\thefootnote{\fnsymbol{footnote}}%
    \def\@makefnmark{\hbox to 0pt{$^{\@thefnmark}$\hss}}%
    \if@twocolumn \twocolumn[\@maketitle]%
    \else%
      \newpage%
      \global\@topnum\z@%
      \@maketitle%
    \fi%
    \thispagestyle{empty}%
    \@thanks%
  \endgroup%
  \setcounter{footnote}{0}%
  \let\maketitle=\relax%
  \let\@maketitle=\relax%
  \gdef\@title{}%
  \gdef\@etitle{}%
  \gdef\@lab{}%
  \gdef\@abst{}%
  \gdef\@name{}%
  \gdef\@ename{}%
}%

\def\@maketitle{%
  \twocolumn[
  %\newpage%
  \null%
  \vskip 1em%
  \begin{center}%
      {\fontsize{16pt}{20pt}\selectfont \bf \@title\par}%
    %\vspace*{1em}%
    {\fontsize{12pt}{20pt}\selectfont \@name \par}
    \vspace*{1em}%
      {\fontsize{16pt}{20pt}\selectfont \bf \@etitle\par}%
    %\vspace*{1em}%
    {\fontsize{12pt}{20pt}\selectfont \@ename \par}
    \vspace*{1em}%
  \end{center}%
  \begin{flushleft}
    \fontsize{9pt}{0pt}\selectfont
    {Abstract : \@abst \par}
  \end{flushleft}
  \vskip 1em%
  ]
}%
\def\title#1{\long\gdef\@title{#1}}%
\def\etitle#1{\long\gdef\@etitle{#1}}%
\def\abst#1{\long\gdef\@abst{#1}}%
\def\name#1{\long\gdef\@name{#1}}%
\def\ename#1{\long\gdef\@ename{#1}}%

